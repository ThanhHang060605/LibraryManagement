<Window x:Class="LibraryManagement.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement"
        mc:Ignorable="d"
        Title="Library Management"
        Height="400"
        Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel Margin="20">

            <TextBlock x:Name="txtRole"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <Button x:Name="btnManageBooks"
                    Content="Manage Books"
                    Height="40"
                    Margin="0,0,0,10"/>

            <Button x:Name="btnManageReaders"
                    Content="Manage Readers"
                    Height="40"
                    Margin="0,0,0,10"/>

            <Button x:Name="btnDashboard"
                    Content="Dashboard"
                    Height="40"/>

        </StackPanel>
    </Grid>
</Window>
