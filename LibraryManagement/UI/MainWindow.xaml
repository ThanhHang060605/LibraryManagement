<Window x:Class="LibraryManagement.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement"
        mc:Ignorable="d"
        Title="Quản Lý Thư Viện - Trang Chủ" 
        Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#D1D3E2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A5199"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#F8F9FC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF4E73DF" Offset="0"/>
                    <GradientStop Color="#FF224ABE" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel>
                <StackPanel Margin="0,30,0,30">
                    <TextBlock Text="📖" FontSize="35" HorizontalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="LIB MANAGEMENT" FontWeight="Bold" Foreground="White" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <Separator Background="#40FFFFFF" Margin="20,15,20,15"/>
                </StackPanel>

                <TextBlock x:Name="txtRole" Text="ADMIN" Foreground="#B3FFFFFF" FontSize="11" FontWeight="Bold" Margin="20,0,0,10"/>

                <Button x:Name="btnManageBooks" Content="📚   Quản lý Sách" Style="{StaticResource MenuButtonStyle}"/>
                <Button x:Name="btnManageReaders" Content="👥   Quản lý Độc giả" Style="{StaticResource MenuButtonStyle}"/>
                <Button x:Name="btnDashboard" Content="📊   Dashboard Thống kê" Style="{StaticResource MenuButtonStyle}" Click="btnDashboard_Click"/>

                <Separator Background="#40FFFFFF" Margin="20,15,20,15"/>

                <Button Content="🚪   Đăng xuất" Style="{StaticResource MenuButtonStyle}" Click="btnLogout_Click"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Color="#EEEEEE" ShadowDepth="2"/>
                </Border.Effect>
                <TextBlock Text="Hệ thống Quản lý Thư Viện" VerticalAlignment="Center" Margin="25,0,0,0" Foreground="#5A5C69" FontSize="16" FontWeight="SemiBold"/>
            </Border>

            <Border Grid.Row="1" Margin="20" Background="White" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Color="#F0F0F0" ShadowDepth="1"/>
                </Border.Effect>
                <ContentControl x:Name="MainContent" Margin="15"/>
            </Border>
        </Grid>
    </Grid>
</Window>