<Window x:Class="LibraryManagement.UI.BookView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Sách"
        Height="650" Width="1000"
        Background="#F8FAFC"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="30">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border CornerRadius="15" Padding="25">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E3A8A" Offset="0"/>
                    <GradientStop Color="#2563EB" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <TextBlock Text="📚 QUẢN LÝ SÁCH"
                       Foreground="White"
                       FontSize="30"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- MAIN CARD -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="20"
                Padding="30">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  ShadowDepth="5"
                                  Opacity="0.15"/>
            </Border.Effect>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- FORM -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="15">
                        <TextBlock Text="Title" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtTitle"
                                 Height="40"
                                 Margin="0,8,0,18"
                                 Background="#F1F5F9"
                                 BorderThickness="0"
                                 Padding="10"/>

                        <TextBlock Text="Author" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtAuthor"
                                 Height="40"
                                 Margin="0,8,0,18"
                                 Background="#F1F5F9"
                                 BorderThickness="0"
                                 Padding="10"/>

                        <TextBlock Text="Category" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtCategory"
                                 Height="40"
                                 Margin="0,8,0,18"
                                 Background="#F1F5F9"
                                 BorderThickness="0"
                                 Padding="10"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="15">
                        <TextBlock Text="Quantity" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtQuantity"
                                 Height="40"
                                 Margin="0,8,0,18"
                                 Background="#F1F5F9"
                                 BorderThickness="0"
                                 Padding="10"/>

                        <TextBlock Text="Search" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtSearch"
                                 Height="40"
                                 Margin="0,8,0,18"
                                 Background="#F1F5F9"
                                 BorderThickness="0"
                                 Padding="10"/>
                    </StackPanel>
                </Grid>

                <!-- BUTTONS -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">

                    <Button Content="➕ Add"
                            Click="btnAdd_Click"
                            Width="120"
                            Height="45"
                            Background="#10B981"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="10"
                            Cursor="Hand"/>

                    <Button Content="✏ Update"
                            Click="btnUpdate_Click"
                            Width="120"
                            Height="45"
                            Background="#3B82F6"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="10"
                            Cursor="Hand"/>

                    <Button Content="🗑 Delete"
                            Click="btnDelete_Click"
                            Width="120"
                            Height="45"
                            Background="#EF4444"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="10"
                            Cursor="Hand"/>

                    <Button Content="🔍 Search"
                            Click="btnSearch_Click"
                            Width="120"
                            Height="45"
                            Background="#8B5CF6"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="10"
                            Cursor="Hand"/>
                </StackPanel>

                <DataGrid Grid.Row="4"
          x:Name="dgBooks"
          AutoGenerateColumns="False"
          Background="White"
          BorderThickness="0"
          RowHeight="45"
          HeadersVisibility="Column"
          GridLinesVisibility="None"
          AlternatingRowBackground="#F1F5F9"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="BookId"
                            Binding="{Binding BookId}"
                            Width="80"/>

                        <DataGridTextColumn Header="Title"
                            Binding="{Binding Title}"
                            Width="200"/>

                        <DataGridTextColumn Header="Author"
                            Binding="{Binding Author}"
                            Width="150"/>

                        <DataGridTextColumn Header="Category"
                            Binding="{Binding Category}"
                            Width="120"/>

                        <DataGridTextColumn Header="Quantity"
                            Binding="{Binding Quantity}"
                            Width="100"/>

                        <!-- CỘT CUỐI GIÃN FULL -->
                        <DataGridTextColumn Header="Available"
                            Binding="{Binding AvailableQuantity}"
                            Width="*"/>

                    </DataGrid.Columns>

                </DataGrid>
            </Grid>
        </Border>

    </Grid>
</Window>