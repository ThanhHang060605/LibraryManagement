<Window x:Class="LibraryManagement.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement.UI"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="40">

            <TextBlock Text="LOGIN SYSTEM"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Username"/>
            <TextBox x:Name="txtUsername" Height="30" Margin="0,5,0,10"/>

            <TextBlock Text="Password"/>
            <PasswordBox x:Name="txtPassword" Height="30" Margin="0,5,0,20"/>

            <Button Content="Login"
                    Height="35"
                    Click="btnLogin_Click"/>

        </StackPanel>
    </Grid>
</Window>